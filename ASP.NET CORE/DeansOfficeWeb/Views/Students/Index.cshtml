@model DeansOfficeWeb.SchoolViewModels.StudentStudyViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>
<div>
    <form asp-controller="Students" asp-action="Index" method="get">
        <p>
            <select asp-for="StudyName" asp-items="Model.Studies">
                <option value="">All</option>
            </select>

           Find by Index Number: <input type="text" asp-for="SearchString" />
           <input type="submit" value="Search" />
        </p>
    </form>
</div>

<div>
    <h5>There are @Model.StudentsCount students by selected criteria</h5>
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Index number</th>
            <th>Study</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in (IEnumerable<Student>)ViewBag.Students)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.IndexNumber</td>
                <td>@student.Study.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.IdStudent">Edit</a> |
                    <a asp-action="Details" asp-route-id="@student.IdStudent">Details</a> |
                    <a asp-action="Delete" asp-route-id="@student.IdStudent">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>


