<Window x:Class="Exercise03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise03"
        mc:Ignorable="d"
        Title="Exercise-03" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="66.6*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="33.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="66.6*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="33.3*"/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Background="Red" Click="Button_Click"/>
        <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Background="Black" Click="Button_Click_1"/>
        <Button Grid.Column="2" Grid.Row="0" Background="Yellow" Click="Button_Click_2"/>
        <Button Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Background="Blue" Click="Button_Click_3"/>
    </Grid>
</Window>
